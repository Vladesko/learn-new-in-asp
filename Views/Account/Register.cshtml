@model SQLiteWork.Models.PersonRegistration
@{
    ViewData["Title"] = "Регистрация";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
          crossorigin="anonymous" />
    <title>Document</title>
</head>
<body>
    <h1>Register</h1>
    <div class="mx-3 my-3">
        <a asp-controller="Home" asp-action="Index" class="btn-primary btn">Home</a>
    </div>
    <div class="container my-3">
        <form asp-controller="Account" asp-action="Register" asp-antiforgery="true" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label class="form-label">Login</label>
                <input asp-for="LogIn" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Full name</label>
                <input asp-for="PersonFullName" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">User name</label>
                <input asp-for="UserName" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Repeat password</label>
                <input asp-for="ConfirmPassword" class="form-control" />
            </div>
            <div>
                <button class="btn btn-primary" type="submit">Registration</button>
            </div>
        </form>
    </div>
</body>
</html>
